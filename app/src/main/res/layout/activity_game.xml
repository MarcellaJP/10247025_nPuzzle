<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/complete_layout"
    tools:context="nl.projects.mprog.npuzzle10247025.npuzzle10247025.GameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/puzzle_picture"
        android:visibility="visible" />

    <TableLayout
        android:id="@+id/puzzle_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/light_blue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:id="@+id/linear_layout" >

            <TextView
                android:id="@+id/text_step_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_count"
                android:textSize="18sp"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/step_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="10dp" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
